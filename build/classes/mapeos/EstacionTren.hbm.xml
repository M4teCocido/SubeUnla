<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping >
	<class name="modelo.fichadas.tren.EstacionTren" table="estaciontren">
		<id column="idEstacion" name="idEstacion">
			<generator class = "identity" />
		</id>
		<property column="nombre" name="nombre" type="string" />
		<many-to-one name="linea" class="modelo.fichadas.tren.LineaTren"  lazy="false" fetch="select" column="idLinea" not-null="true" />
		<set name="lectoras" table="lectoratren" inverse="true" lazy="false" fetch="select"><!-- order-by="idLectora asc" -->
			<key column="idEstacion" not-null="true" />
			<one-to-many class="modelo.lectoras.LectoraTren" />
		</set>
 	</class>
</hibernate-mapping>